[include]
  path = ~/.gitconfig_local
[color]
  ui = auto
  diff = always
  grep = always
  branch = always
  status = always
  interactive = always
[core]
  # pager = delta --plus-color="#012800" --minus-color="#340001" --theme='Monokai Extended'
  pager = less -S
  editor = vim
  autocrlf = input
  commitGraph = true
  excludesfile = ~/dotfiles/.gitignore_global
[pull]
  rebase = true
[push]
  default = matching
[diff]
  algorithm = histogram
  compactionHeuristic = true
[merge]
  tool = vimdiff
  keepBackup = false
[mergetool]
  keepBackup = false
[alias]
  f   = fetch --prune
  p   = pull --prune
  st  = status
  sts = !"git status | awk '/On/,/Changes not staged/'"
  stn = !"git status | awk '/Changes not staged/,/END/'"
  br  = branch
  ci  = commit
  ck  = checkout
  cp  = cherry-pick
  wc  = whatchanged
  re  = remote -v
  dif = icdiff
  difc  = icdiff --cached
  diffc = diff --cached
  diffg = difftool --tool=vimdiff --no-prompt
  push  = push --tags
  pushf = push --force-with-lease

  # %x09    Tab
  # %H      Commit Hash(full)
  # %h      Commit Hash(short)
  # %an     Author Name
  # %ae     Author Email
  # %ad     Author Date
  # %cn     Comitter Name
  # %ce     Comitter Email
  # %cd     Comitter Date
  # %s      message
  # %d      branch/tag
  # %C(red bold) start color
  #    [color] = [normal, black, red, green, yellow, blue, magenta, cyan, white]
  #    [style] = [bold, dim, ul, blink, reverse]
  # %C(reset)  reset color
  logp  = log -p
  logs  = log --stat
  logaa = log --graph --color --pretty='%x09%h %s %C(red)%d%C(reset)'
  loga  = log --graph --color --pretty='%x09%h %s %C(red)%d%C(reset)' --all
  logo  = log --graph --date=format:'%y-%m-%d(%a) %T' --pretty=format:'%C(green)%ad%C(reset) %an %ae %s'
  logg  = log --graph --date=format:'%y-%m-%d(%a) %T' --pretty=format:'%h %C(green)%cd %C(blue)%ad %C(green)%cn %C(blue)%an %C(green)%ce %C(blue)%ae %C(reset)%s'
[pager]
  diff = diff-highlight | less
  show = diff-highlight | less
  log  = diff-highlight | less
[interactive]
  diffFilter = diff-highlight
  # diffFilter = delta --color-only
[diff "gif"]
  textconv = stat -c %s
[diff "png"]
  textconv = stat -c %s
[diff "webp"]
  textconv = stat -c %s
[diff "jpeg"]
  textconv = stat -c %s
