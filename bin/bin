#!/usr/bin/env ruby

HELP = <<EOS
show bin, hex, decimal format

$ bin 0xff
111,111 0xFF 255

$ bin 0b1010
1010 0xA 10

$ bin 256
0001,0000,0000 0x100 256

$ bin 10 20
1010 0xA 10
0001,1010 0x14 20
EOS

def to_bin(n)
  n.to_s(2).split("").reverse.each_slice(4).to_a.map {|arr|
    arr.reverse.join.rjust(4, "0")
  }.reverse.join(",")
end

def to_hex(n)
  "0x" + n.to_s(16).upcase
end

if ARGV.empty?
  puts HELP
  exit 0
end

ARGV.each {|arg|
  num = arg.to_i(0) # detect by prefix
  puts "#{to_bin(num)} #{to_hex(num)} #{num}"
}
