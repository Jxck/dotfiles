#!/usr/bin/env ruby

HELP = <<EOS
show bin, hex, decimal format

$ bin 0xff
111,111 0xFF 255

$ bin 0b1010
1010 0xA 10

$ bin 256
0001,0000,0000 0x100 256

$ bin 10 20
1010 0xA 10
0001,1010 0x14 20
EOS

def to_bin(n)
  n.to_s(2).split("").reverse.each_slice(4).to_a.map {|arr|
    arr.reverse.join.rjust(4, "0")
  }.reverse.join(",")
end

def to_hex(n)
  "0x" + n.to_s(16).upcase
end

def show(num)
  puts "#{to_bin(num)} #{to_hex(num)} #{num}"
end

if ARGV.empty?
  puts HELP
  exit 0
end

OPS = [
  "and",
  "or",
  "xor",
  "sl",
  "sr",
]

if OPS - ARGV == OPS
    ARGV.each {|arg|
      show(arg.to_i(0)) # detect by prefix
    }
    exit(0)
end

p ARGV

form = ARGV.map {|arg|
  case arg
  when "and" then
    puts "and"
    "&"
  when "or" then
    puts "or"
    "|"
  when "xor" then
    puts "xor"
    "^"
  when "sl" then
    puts "sl"
    "<<"
  when "sr" then
    puts "sr"
    ">>"
  else
    show(arg.to_i(0))
    arg.to_i(0) # detect by prefix
  end
}.join(' ')

puts "------------"
show(eval(form))
