#!/usr/bin/env ruby

# show bin, hex, decimal format
#
# $ bin 0xff
# 111,111 0xFF 255

num = ARGV[0].to_i(0) # detect by prefix

def to_bin(n)
  n.to_s(2).split("").reverse.each_slice(4).to_a.map {|arr|
    arr.reverse.join.rjust(4, "0")
  }.reverse.join(",")
end

def to_hex(n)
  "0x" + n.to_s(16).upcase
end

puts "#{to_bin(num)} #{to_hex(num)} #{num}"
