#!/usr/bin/env ruby

RED   = "31"
GREEN = "32"
YELLO = "33"
BLUE  = "34"
PINK  = "35"
CYAN  = "36"

@colors = (31..36).to_a * 3

def color(src, color)
  head = "\033[#{color}m"
  tail = "\033[0m"
  head + src  + tail
end

def color_line(line)
  line
  .split
  .zip(@colors)
  .map{|x| color(x[0], x[1])}
  .join(' ')
end

while line = STDIN.gets
  STDOUT.puts color_line(line)
end
