#!/usr/bin/env ruby

black  = "0;30m"
red    = "0;31m"
green  = "0;32m"
brown  = "0;33m"
navy   = "0;34m"
purple = "0;35m"
cyan   = "0;36m"
gray   = "0;37m"
dim    = "1;30m"
orange = "1;31m"
lime   = "1;32m"
yellow = "1;33m"
blue   = "1;34m"
pink   = "1;35m"
aqua   = "1;36m"
white  = "1;37m"

@colors = [
  black,
  red,
  green,
  brown,
  navy,
  purple,
  cyan,
  gray,
  dim,
  orange,
  lime,
  yellow,
  blue,
  pink,
  aqua,
  white
].reverse

def color(src, color)
  head = "\x1b[#{color}m"
  tail = "\x1b[0m"
  head + src  + tail
end

def color_line(line)
  line
  .split
  .zip(@colors)
  .map{|x| color(x[0], x[1])}
  .join(' ')
end

while line = STDIN.gets
  STDOUT.puts color_line(line)
end
