#!/usr/bin/env ruby

HELP=<<EOS
display ascii code of input charactor

$ ascii aA01
97   65   48   49
0x61 0x41 0x30 0x31

$ ascii 0x61
97
a
EOS

arg = ARGV[0]

if arg == nil
  puts HELP
  exit 0
end

if arg.start_with?("0x")
  puts arg.to_i(0)
  puts [arg.to_i(0)].pack("c")
else
  puts arg.unpack("c*").map{|n| n.to_s.ljust(4, ' ') }.join(" ")
  puts arg.unpack("c*").map{|n| "0x" + n.to_i.to_s(16).upcase }.join(" ")
end
