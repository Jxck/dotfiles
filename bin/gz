#!/usr/bin/env ruby

########################################
# HELP
########################################
HELP = <<EOS
compress dir/file to .tar.gz with zcvf

$ gz foo
> foo.tar.gz
EOS

if ARGV[0] == "-h" || ARGV.empty?
  puts HELP
  exit 0
end


########################################
# Main
########################################
ARGV.each{|arg|
  puts "$ tar zcvf #{arg}.tar.gz #{arg}"
  puts `tar zcvf #{arg}.tar.gz #{arg}`
  puts
}
