#!/usr/bin/env ruby

arg = ARGV[0]


if arg == "here"
  current = Dir::pwd

template = <<EOS
export GOPATH=#{current}
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin
EOS

  env = File.open("/home/master/.gobrew/env/.goenv",'w')
  env.puts template
  env.close
  `source /home/master/.gobrew/env/.goenv`
end
