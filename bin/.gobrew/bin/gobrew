#!/usr/bin/env ruby

arg = ARGV[0]


if arg == "here"
  current = Dir::pwd

template = <<EOS
export GOPATH=#{current}
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin
EOS
  path = File::expand_path('~') + "/.gobrew/env/.goenv"
  env = File.open(path,'w')
  env.puts template
  env.close
end

if arg == "pkg"
  puts `tree $GOROOT/src/pkg -L 2 -d`
end
