#!/usr/bin/env ruby

arg = ARGV[0]


if arg == "here"
  current = Dir::pwd

template = <<EOS
export GOPATH=#{current}
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin
EOS

  goenv = File.open("/home/master/.gobrew/env/.goenv",'w')
  goenv.puts template
  goenv.close
  system("source /home/master/.gobrew/env/.goenv")
end
