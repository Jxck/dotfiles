#!/usr/bin/env ruby

########################################
# HELP
########################################
HELP=<<EOS
replace double width symbol to single width
copy from browser sometime needs this

$ singler readme.md
$ cat readme.md | singler > readme.md
EOS

# -h or no arg
if ARGV[0] == "-h" || ARGV.empty?
  puts HELP
  exit 0
end


########################################
# Main
########################################
def replace(str)
  require 'nkf'
  NKF.nkf('-w -Z', str)
    .gsub('…', '...')

  #str
  #  .gsub('”', '"')
  #  .gsub('“', '"')
  #  .gsub("’", "'")
  #  .gsub("‘", "'")
  #  .gsub("—", "-")
  #  .gsub("–", "-")
  #  .gsub("｜", "|")
  #  .gsub("？", "?")
  #  .gsub("！", "!")
  #  .gsub("（", "(")
  #  .gsub("）", ")")
  #  .gsub("［", "[")
  #  .gsub("］", "]")
  #  .gsub("：", ":")
  #  .gsub("＋", "+")
  #  .gsub("％", "%")
  #  .gsub("？", "?")
  #  .gsub("＆", "&")
end

arg = ARGV[0]
unless arg == nil
  data = File.open(arg).read
  formatted = replace(data)

  if data != formatted
    File.write(arg, formatted)
  end
  exit 0
end

unless STDIN.isatty
  while line = STDIN.gets
    STDOUT.print replace(line)
  end
  exit 0
end

puts HELP
