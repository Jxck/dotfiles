#!/usr/bin/env ruby

require "json"
require "open-uri"

HELP=<<EOS
Download build binary from github release
64bit version via zip or taball

$ ghbin peco/peco
EOS

arg = ARGV[0]

if arg == nil || arg == "-h"
  puts HELP
  exit 0
end

os = `uname`.chop.downcase
arch = "amd64"

arg = ARGV.shift
owner, repo = arg.split('/')
puts "INSTALL #{owner}/#{repo}"

latest = "https://api.github.com/repos/#{owner}/#{repo}/releases/latest"
puts "GET #{latest}\n\n"

body = open(latest, &:read)
json = JSON.parse(body)
assets = json["assets"].map{|asset| asset["browser_download_url"]}
puts assets, "\n"


puts assets.select{|asset| asset.match(os)}.select{|asset| asset.match(arch)}


#url = `curl -L #{releases} | jq '.assets | .[] | .browser_download_url' | grep #{arch} | grep amd64`.chomp.gsub(/"/, ' ').strip
#puts "\nTARGET URL: #{url}\n\n"
