## (Mac)

# prompt configuration
PROMPT="%n$ "
#RPROMPT="[%/]"
SPROMPT="%r is correct? [n,y,a,e]: "

# ls color
export LSCOLORS=exfxcxdxbxegedabagacad
export LS_COLORS='di=33:ln=35:so=32:pi=33:ex=31:bd=46;34:cd=43;34:su=41;30:sg=46;30:tw=42;30:ow=43;30'

# alias
alias ls="ls -lahG"
alias grep="grep --col"

alias pwd="pwd && pwd | pbcopy"
alias sf="TZ=America/Los_Angeles date"

# tmux
if [[ "$TMUX" != "" ]] then
    alias pb="ssh 127.0.0.1 pbcopy"
    alias pbp="ssh 127.0.0.1 pbpaste"
fi

# vim
export EDITOR=/Applications/MacVim.app/Contents/MacOS/Vim
alias vi='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
alias vim='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
alias gvim='open -a MacVim'
alias 'gitupdate'='git add . && git ci -m 'update' && git push origin master'

# emacs
alias emacs="/usr/local/Cellar/emacs/23.3b/Emacs.app/Contents/MacOS/Emacs -nw"

# change PATH for homebew
# MBA orig /usr/bin:/bin:/usr/sbin:/sbin:/usr/local/bin:/usr/X11/bin
PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11/bin:$PATH

PATH="$HOME/Library/Haskell/bin:$PATH"

export PATH
